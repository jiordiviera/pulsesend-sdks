{
  "name": "pulsesend/php-sdk",
  "description": "Official PHP SDK for PulseSend email delivery service",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "PulseSend Team",
      "email": "sdk@pulsesend.com"
    }
  ],
  "keywords": [
    "email",
    "api",
    "pulsesend",
    "transactional",
    "laravel",
    "php"
  ],
  "homepage": "https://pulsesend.com",
  "support": {
    "issues": "https://github.com/pulsesend/pulsesend-sdks/issues",
    "source": "https://github.com/pulsesend/pulsesend-sdks"
  },
  "require": {
    "php": "^8.0",
    "guzzlehttp/guzzle": "^7.0",
    "psr/http-client": "^1.0",
    "psr/http-message": "^1.0",
    "psr/log": "^1.0|^2.0|^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0|^10.0",
    "phpstan/phpstan": "^1.0",
    "squizlabs/php_codesniffer": "^3.0",
    "mockery/mockery": "^1.4",
    "illuminate/support": "^8.0|^9.0|^10.0|^11.0"
  },
  "suggest": {
    "illuminate/support": "Required for Laravel integration (^8.0|^9.0|^10.0|^11.0)",
    "monolog/monolog": "For advanced logging capabilities"
  },
  "autoload": {
    "psr-4": {
      "PulseSend\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PulseSend\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html=coverage",
    "phpstan": "phpstan analyse src --level=8",
    "cs-check": "phpcs src tests --standard=PSR12",
    "cs-fix": "phpcbf src tests --standard=PSR12"
  },
  "extra": {
    "laravel": {
      "providers": [
        "PulseSend\\Laravel\\PulseSendServiceProvider"
      ],
      "aliases": {
        "PulseSend": "PulseSend\\Laravel\\PulseSendFacade"
      }
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "preferred-install": "dist"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}