{
  "name": "@pulsesend/sdks",
  "version": "0.1.0",
  "description": "Monorepo containing all official PulseSend SDKs",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "bun@1.0.0",
  "scripts": {
    "build": "bun run --filter='./packages/*' build",
    "test": "bun run --filter='./packages/*' test",
    "lint": "bun run --filter='./packages/*' lint",
    "dev": "bun run --filter='./packages/*' --parallel dev",
    "clean": "bun run --filter='./packages/*' clean && rm -rf node_modules",
    "changeset": "changeset",
    "changeset:version": "changeset version && bun install --lockfile-only",
    "changeset:publish": "bun run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jiordiviera/pulsesend-sdks"
  },
  "author": "PulseSend Team",
  "license": "MIT"
}